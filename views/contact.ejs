<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3 class="fw-bold mb-3">Daftar Contact</h3>
            
            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>

            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert"><%= msg %></div>
            <% } %>

            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                <% if (contacts.length < 1) { %>
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-danger" role="alert">
                                <h3 class="text-center">Data Contact Kosong</h3>
                            </div>
                        </td>
                    </tr>
                <% } %>
                    
                <% contacts.forEach((contact, i) => { i++ %>
                    <tr>
                        <th scope="row"><%= i++ %></th>
                        <td><%= contact.nama %></td>
                        <td><%= contact.noHP %></td>
                        <td>
                            <a href="/contact/<%= contact.nama %>" class="btn btn-success"><i class="bi bi-info"></i></a>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>